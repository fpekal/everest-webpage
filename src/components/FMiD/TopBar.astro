---
import { primaryColor, secondaryColor, additionalColor, textColor } from '../../components/Palette.astro'
import DejaVuSansMono from '../DejaVuSansMono.astro'
---

<DejaVuSansMono />

<div class="topbar">
	<div class="name">Simon's Pizzeria</div>
	<div class="buttons">
		<a href="/"><div class="button">Strona główna</div></a>
		<a href="receipts/1"><div class="button">Zakupy</div></a>
		<a href="contact"><div class="button">Kontakt</div></a>
	</div>
</div>


<style define:vars={{ primaryColor, secondaryColor, additionalColor, textColor }}>
	.topbar {
		display: flex;

		width: 100%;
		height: 5em;

		align-items: center;
		justify-content: space-between;

		color: var(--textColor);

		font-family: 'DejaVuSansMono';
	}

	.name {
		font-size: 1.5em;

		margin-left: 1em;

		font-weight: bold;

		width: 5em;
	}

	.buttons {
		display: flex;
		flex-direction: row;

		font-size: 0.9em;

		margin: 0 1em;
	}

	.button {
		position: relative;

		margin: 0 0.5em;
		padding: 0.8em 0.8em;

		min-width: 4em;

		text-align: center;
	}

	.button::before {
		display: block;
		position: absolute;

		border-radius: 0.3em;

		content: "";

		top: 0;
		bottom: 0;
		right: 0;
		left: 0;

		width: 100%;
		height: 0%;

		transition: ease 300ms;

		z-index: -1;
	}

	.button:hover::before {
		background-color: var(--additionalColor);
		opacity: 80%;
		height: 100%;
	}

	a {
		text-decoration: none;
		color: inherit;
	}
</style>
