---
const movie = Astro.props.movie;

const id = movie.id;
const title = movie.title;
const poster_url = "http://image.tmdb.org/t/p/original" + movie.poster_path;
---

<a href={"get?id=" + id}>
	<div class="poster">
		<img src={poster_url} width='200' />
		<div class="title">{title}</div>
	</div>
</a>

<style>
	.poster {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background-color: #f0f0f0;
		width: 250px;

		margin: 1em;
		padding: 1em;
	}

	.title {
		text-align: center;
		margin-top: 0.5em;
	}
</style>
