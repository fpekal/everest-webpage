---
const series = Astro.props.series;
const episode = Astro.props.episode;
const season = Astro.props.season;

const id = series.id;
const title = series.name;
const poster_url = "http://image.tmdb.org/t/p/original" + series.poster_path;
---

<a href={"/subs/series/get?id=" + id + '&episode=' + episode + '&season=' + season}>
	<div class="poster">
		<img src={poster_url} width='200' />
		<div class="title">{title}</div>
	</div>
</a>

<style>
	.poster {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background-color: #f0f0f0;
		width: 250px;

		margin: 1em;
		padding: 1em;
	}

	.title {
		text-align: center;
		margin-top: 0.5em;
	}
</style>
