---
import NormalLayout from '../components/FMiD/NormalLayout.astro'

import DejaVuSansMono from '../components/DejaVuSansMono.astro'
---

<DejaVuSansMono />

<NormalLayout>
	<div class="container">
		<div class="text">
			PROBLEMY TECHNICZNE!
		</div>
	</div>
</NormalLayout>

<style>
	@keyframes spin {
		from {
			transform: rotate(0deg);
			color: blue;
		}

		50% {
			color: red;
		}

		to {
			transform: rotate(360deg);
			color: blue;
		}
	}

	.text {
		animation: 5s infinite linear;
		animation-name: spin;
	}

	.container {
		display: flex;
		color: white;

		font-family: 'DejaVuSansMono';

		font-size: 2em;
		font-weight: bold;

		color: #D26163;

		justify-content: center;
		align-items: center;

		height: 100%;
		width: 100%;
	}
</style>

